/* pages/application_verify/application_verify.wxss */
@import "../../style/weui.wxss";

/*标题*/
.title {
  color: red;
  font-family: cursive;
  font-size: 36rpx;
  position: absolute;
  top: 25rpx;
  align-content: center;
}

/*小标题*/
.heading {
  color: black;
  position: relative;
  top: 10rpx;
  text-align: left;
  padding-left: 15px;
  padding-right: 15px;
  font-family: cursive;
  font-size: 28rpx;
}

/*表单*/
.create-form {
  width: 100%;
  height: 90%;
  position: absolute;
  margin: 10% 0 0 0;
  color: rgba(34, 39, 39, 0.6);
}

/*段位选择器*/
.dan-grading-picker {
  color: black;
  font-family: cursive;
  text-align: center;
  position: relative;
  margin-top: 30rpx;
  
}

.picke ,input-cells {
  margin-top: 15rpx;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.31176471;
  font-size: 17px;
}

.input-cells::before, picke:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.input-cells::after, picke::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

/*上传图片*/
.upload-pic {
  position: relative;
  color: #ffffff;
  font-family: cursive;
  background-color: #00BFFF;
  margin-top: 15rpx;
}